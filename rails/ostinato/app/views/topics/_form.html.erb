<%= form_for(topic) do |f| %>
  <% if topic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(topic.errors.count, "error") %> prohibited this topic from being saved:</h2>

      <ul>
      <% topic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :codename %><br />
    <%= f.text_field :codename, class: "form-control", style: "max-width: 500px"%>
  </div>
  <div class="checkbox">
    <%= f.label :public, id: "public-checkbox" do %>
      <%= f.check_box :public, class: "form-control" %>
      <span class="cr"><i class="cr-icon fa fa-check"></i></span>
      <%= Topic.human_attribute_name("public") %>
    <% end %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit I18n.t('topics.create_topic'), class: 'btn btn-success'%>
  </div>
<% end %>
