<%= link_to "New File", new_file_resource_path, class: "btn btn-primary btn-sm" %>
<br/>
<br/>

<div class="asset_list_header"> 
       <div class="file_name_header">File Name</div> 
       <div class="file_size_header">Size</div> 
       <div class="file_last_updated_header">Modified</div> 
   </div> 
   <div class="asset_list"> 
        <% @files.each do |file| %> 
           <div class="asset_details"> 
               <div class="file_name"><%= link_to File.basename(file.attachment.path), File.basename(file.attachment.path)%></div> 
               <div class="file_size"><%= Filesize.from(Filesize.from("#{file.attachment.size} B").to_f('KB').to_s + "KB").pretty %></div> 
               <div class="file_last_updated"><%= file.updated_at.strftime("%d.%m.%Y %H:%M") %></div> 
               <div class="file_download"><%= link_to "Download", file_resources_download_path(id: file.id) %></div>
               <div class="file_delete"><%= button_to "Delete",  file, method: :delete, class: "btn btn-danger btn-xs", confirm: "Are you sure that you wish to delete #{file.name}?" %></div> 
           </div> 
        <% end %> 
</div> 