<% if !flash[:notice].blank? %>
  <div class="alert alert-info">
  <%= flash[:notice] %>
  </div>
<% end %>
<br />
<%= link_to "New File", new_file_resource_path, class: "btn btn-primary" %>
<br />
<br />
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @files.each do |file| %>
      <tr>
        <td><%= file.name %></td>
        <%= link_to FileResource.basename(file.attachment.path), file.attachment_url(:query => {"response-content-disposition" => "attachment"}).to_s %>
        <td><%= link_to "Download File", file.attachment_url %></td>
        <td><%= button_to "Delete",  file, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{file.name}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>