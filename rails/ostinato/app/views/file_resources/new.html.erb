<div class="form-container">
  <% if !@file.errors.empty? %>
    <div class="alert alert-error">
      <ul>
        <% @file.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @file, html: { multipart: true } do |f| %>
    <div class="form-group">
      <%= f.label :attachment, class: "btn btn-default btn-file" do %>
      <%= I18n.t('files.browse') %>
      <%= f.file_field :attachment, :required => 'required'%>
      <%end %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control description" %>
    </div>
    <br />
    <%= f.submit I18n.t('save'), class: 'btn btn-success' %>
  <% end %>
</div>