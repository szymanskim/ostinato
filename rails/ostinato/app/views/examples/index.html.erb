<p id="notice"><%= notice %></p>

<h1> <%= t 'views.example.index.title' %> </h1>

<table>
  <thead>
    <tr>
      <th><%= Example.human_attribute_name(:name) %></th>
      <th><%= Example.human_attribute_name(:description) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @examples.each do |example| %>
      <tr>
        <td><%= example.name %></td>
        <td><%= example.description %></td>
        <td><%= link_to I18n.t('views.example.show'), example %></td>
        <td><%= link_to I18n.t('views.example.edit'), edit_example_path(example) %></td>
        <td><%= link_to I18n.t('views.example.destroy'), example, confirm: I18n.t('views.are_you_sure'), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to I18n.t('views.example.index.new_example'), new_example_path %>
